{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "git-log-nodejs": ["types/index.d.ts"]
    },
    "removeComments": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "types/index.d.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
