{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "removeComments": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "types/index.d.ts",
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
